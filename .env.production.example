# Production Environment Variables Example
# Copy this file to .env.production and fill in your actual values

# ====================
# NODE ENVIRONMENT
# ====================
NODE_ENV=production

# ====================
# DATABASE (SQL Server)
# ====================
SQL_SERVER=your-production-server.database.windows.net
SQL_PORT=1433
SQL_DATABASE=HVTSocial
SQL_USER=hvtsocial_admin
SQL_PASSWORD=YourProductionPassword123!
SQL_ENCRYPT=true
SQL_TRUST_CERT=false

# ====================
# REDIS CACHE
# ====================
REDIS_HOST=your-redis-host.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-password
REDIS_TLS=true

# ====================
# JWT AUTHENTICATION
# ====================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d

# ====================
# CORS ORIGINS
# ====================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://hvtsocial.com,https://www.hvtsocial.com,https://api.hvtsocial.com

# ====================
# CLIENT URL
# ====================
CLIENT_URL=https://hvtsocial.com

# ====================
# CLOUDINARY (Media Storage)
# ====================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ====================
# EMAIL SERVICE (Nodemailer)
# ====================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=HVTSocial <noreply@hvtsocial.com>

# ====================
# SERVER CONFIGURATION
# ====================
PORT=5000
HOST=0.0.0.0

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# ====================
# LOGGING
# ====================
LOG_LEVEL=info
LOG_DIR=./logs

# ====================
# SECURITY
# ====================
HELMET_ENABLED=true
SESSION_SECRET=your-session-secret-min-32-chars

# ====================
# TWO-FACTOR AUTHENTICATION
# ====================
TWO_FACTOR_ISSUER=HVTSocial
TWO_FACTOR_APP_NAME=HVTSocial

# ====================
# MONITORING & ANALYTICS (Optional)
# ====================
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id

# ====================
# SSL/TLS (if using HTTPS)
# ====================
# SSL_KEY_PATH=/path/to/ssl/private.key
# SSL_CERT_PATH=/path/to/ssl/certificate.crt
