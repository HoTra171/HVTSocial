# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration - SQL Server (Local)
SQL_SERVER=localhost
SQL_PORT=1433
SQL_DATABASE=your_database_name
SQL_USER=your_username
SQL_PASSWORD=your_password
SQL_ENCRYPT=false
SQL_TRUST_CERT=true

# Database Configuration - PostgreSQL (Production - Railway/Render)
# DATABASE_URL=postgresql://user:password@host:5432/database
# Uncomment this for PostgreSQL deployment

# Redis Configuration - Local
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# Redis Configuration - Cloud (Upstash/Railway)
# REDIS_URL=redis://default:password@host:6379
# Uncomment this for cloud Redis

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Client URL
CLIENT_URL=http://localhost:3000

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Email Configuration (for sending emails)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Cloudinary Configuration (for image/video uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
